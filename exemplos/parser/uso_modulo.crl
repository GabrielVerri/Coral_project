# 7. Contador de dias da semana
ESCREVA("--- Dias da Semana ---")
dias = ["Domingo", "Segunda", "Terça", "Quarta", "Quinta", "Sexta", "Sábado"]

ESCREVA("Próximos 14 dias começando de Domingo:")
