# 8. Validação de dígito verificador simples
ESCREVA("--- Dígito Verificador (Mod 11) ---")

FUNCAO calcular_digito(numero):
    soma = 0
    multiplicador = 2
    
    # Simula extração de dígitos (simplificado)
    digitos = [numero / 1000, numero % 1000 / 100, numero % 100 / 10, numero % 10]
    
    PARA d DENTRODE digitos:
        nova_soma = soma + d * multiplicador
        soma = nova_soma
        novo_mult = multiplicador + 1
        multiplicador = novo_mult
    
    resto = soma % 11
    SE resto < 2:
        RETORNAR 0
    SENAO:
        RETORNAR 11 - resto

numero_base = 1234
digito = calcular_digito(numero_base)
ESCREVA(f"Número: {numero_base}")
ESCREVA(f"Dígito verificador: {digito}")
ESCREVA()

# 9. Números em colunas (formatação)
ESCREVA("--- Números em 5 Colunas ---")
contador = 1
PARA linha DENTRODE INTERVALO(4):
    linha_texto = ""
    PARA coluna DENTRODE INTERVALO(5):
        novo_texto = linha_texto + f"{contador} "
        linha_texto = novo_texto
        novo_contador = contador + 1
        contador = novo_contador
    ESCREVA(linha_texto)
