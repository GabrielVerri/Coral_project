# Exemplo: Aplicações Práticas do Operador Módulo (%)

ESCREVA("=== Aplicações do Operador Módulo ===")
ESCREVA()

# 1. Sistema de turno circular
ESCREVA("--- Sistema de Turnos ---")
jogadores = ["Ana", "Bruno", "Carlos", "Diana"]
num_jogadores = TAMANHO(jogadores)

ESCREVA(f"Jogadores: {jogadores}")
ESCREVA()

ESCREVA("Simulando 10 rodadas:")
PARA rodada DENTRODE INTERVALO(1, 11):
    indice = rodada % num_jogadores
    jogador_atual = jogadores[indice]
    ESCREVA(f"Rodada {rodada}: Vez de {jogador_atual}")
ESCREVA()

# 2. Conversão de horas (formato 24h para 12h)
ESCREVA("--- Conversão de Horário ---")
PARA hora DENTRODE INTERVALO(0, 25):
    hora_12 = hora % 12
    SE hora_12 == 0:
        hora_12 = 12
    
    SE hora < 12:
        periodo = "AM"
    SENAO:
        periodo = "PM"
    
    ESCREVA(f"{hora}:00 (24h) = {hora_12}:00 {periodo}")
ESCREVA()

# 3. Verificação de ano bissexto
ESCREVA("--- Anos Bissextos ---")

FUNCAO eh_bissexto(ano):
    SE ano % 400 == 0:
        RETORNAR VERDADE
    SE ano % 100 == 0:
        RETORNAR FALSO
    SE ano % 4 == 0:
        RETORNAR VERDADE
    RETORNAR FALSO

anos = [2020, 2021, 2022, 2023, 2024, 2025, 2100, 2400]
PARA ano DENTRODE anos:
    SE eh_bissexto(ano):
        ESCREVA(f"{ano} é bissexto")
    SENAO:
        ESCREVA(f"{ano} NÃO é bissexto")
ESCREVA()

